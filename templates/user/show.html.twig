{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<p class="h1 text-center mt-5">Utilisateurs n° {{ user.id }}</p>
<hr/>
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
      {{ user.email }}
      </td>
      <td>
<span data-bs-toggle="modal" data-bs-target="#exampleModal">
      <i class="text-danger fa-solid fa-trash"></i>
      </span>
      </td>
    </tr>
  </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer l'utilisateur</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        êtes-vous certain de vouloir faire cela ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Annuler</button>
        <a href="{{ path('app_user_delete', {'id':user.id}) }}"><button type="button" class="btn btn-danger">Confirmer</button></a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
